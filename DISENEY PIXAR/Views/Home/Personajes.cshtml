
@model DISENEY_PIXAR.Models.ViewModel.PersonajesViewModel
@{
    Layout = "_Layout";
}

<div id="principalVer">

    <div class="container">
        <img class="image1" src="~/images/banners/@(Model.Id)_b.jpg">
        <div class="overlay">
            <img class="image2" src="~/images/banners/@(Model.Id)_b.png">
        </div>

    </div>

    <div class="datosPelicula">
        <h1>@Model.Nombre</h1>
        <h2>
            @Model.Nombre - @(Model.FechaEstreno==null?"":Model.FechaEstreno.Value.ToShortDateString())
            </h1>
            <p>
                @Model.Descripcion

            </p>


            <div class="personajes">
                <h2>Personajes</h2>

                @foreach (var PER in Model.Apariciones)
                {

                    <div>
                        <a>
                            <img src="~/images/personajes/@(PER.IdPersonaje).jpg" alt="@PER.IdPersonajeNavigation.Nombre">
                        </a>
                        <div class="nombrePelicula">
                            <p>@PER.IdPersonajeNavigation.Nombre</p>
                        </div>
                    </div>
                }

            </div>
    </div>
</div>